    <!--        android:layout_height="wrap_content"-->
    <!--        android:gravity="center"-->
    <!--        android:text="0.00"-->
    <!--        android:textAlignment="center"-->
    <!--        android:textColor="@color/main"-->
    <!--        android:textSize="30dp" />-->

</RelativeLayout>