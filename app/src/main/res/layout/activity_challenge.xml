<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="20dp"
            android:src="@drawable/ic_hambur" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="챌린지"
            android:textColor="@color/main"
            android:fontFamily="@font/sdsamliphopangchettfbasic"
            android:textSize="25sp"
            android:paddingLeft="50dp"
            android:paddingBottom="20dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/vie_bg"
                android:elevation="10dp">

                <!--    1번째 뱃지 1-->

                <ProgressBar
                    android:id="@+id/progressBar01"
                    style="@style/CircularDeterminateProgressBar"
                    tools:progress="90"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.1" />

                <ImageView
                    android:id="@+id/badge01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_badge01"
                    app:layout_constraintBottom_toBottomOf="@+id/progressBar01"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar01"
                    app:layout_constraintStart_toStartOf="@+id/progressBar01"
                    app:layout_constraintTop_toTopOf="@+id/progressBar01" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="업사이클 매장 10회 이용"
                    android:textColor="@color/text2"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar01"
                    app:layout_constraintStart_toStartOf="@+id/progressBar01"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar01" />

                <!--    2번째 뱃지 2-->

                <ProgressBar
                    android:id="@+id/progressBar02"
                    style="@style/CircularDeterminateProgressBar"
                    tools:progress="80"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/progressBar01"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.1" />

                <ImageView
                    android:id="@+id/badge02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_badge02"
                    app:layout_constraintBottom_toBottomOf="@+id/progressBar02"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar02"
                    app:layout_constraintStart_toStartOf="@+id/progressBar02"
                    app:layout_constraintTop_toTopOf="@+id/progressBar02" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="줍깅 50번 하기"
                    android:textColor="@color/text2"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar02"
                    app:layout_constraintStart_toStartOf="@+id/progressBar02"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar02" />

                <!--    3번째 뱃지 9-->

                <ProgressBar
                    android:id="@+id/progressBar03"
                    style="@style/CircularDeterminateProgressBar"
                    tools:progress="60"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar01"
                    app:layout_constraintVertical_bias="0.1" />

                <ImageView
                    android:id="@+id/badge03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_badge09"
                    app:layout_constraintBottom_toBottomOf="@+id/progressBar03"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar03"
                    app:layout_constraintStart_toStartOf="@+id/progressBar03"
                    app:layout_constraintTop_toTopOf="@+id/progressBar03" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="어스 저금통 10회 하기"
                    android:textColor="@color/text2"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar03"
                    app:layout_constraintStart_toStartOf="@+id/progressBar03"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar03" />

                <!--    4번째 뱃지 6-->

                <ProgressBar
                    android:id="@+id/progressBar04"
                    style="@style/CircularDeterminateProgressBar"
                    tools:progress="60"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/progressBar03"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar02"
                    app:layout_constraintVertical_bias="0.1" />

                <ImageView
                    android:id="@+id/badge04"
                    style="@style/CircularDeterminateProgressBar"
                    tools:progress="50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_badge06"
                    app:layout_constraintBottom_toBottomOf="@+id/progressBar04"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar04"
                    app:layout_constraintStart_toStartOf="@+id/progressBar04"
                    app:layout_constraintTop_toTopOf="@+id/progressBar04" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="랭킹 2위 10회 달성"
                    android:textColor="@color/text2"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar04"
                    app:layout_constraintStart_toStartOf="@+id/progressBar04"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar04" />

                <!--    5번째 뱃지 7-->

                <ProgressBar
                    android:id="@+id/progressBar05"
                    style="@style/CircularDeterminateProgressBar"
                    tools:progress="30"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar03"
                    app:layout_constraintVertical_bias="0.1" />

                <ImageView
                    android:id="@+id/badge05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_badge07"
                    app:layout_constraintBottom_toBottomOf="@+id/progressBar05"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar05"
                    app:layout_constraintStart_toStartOf="@+id/progressBar05"
                    app:layout_constraintTop_toTopOf="@+id/progressBar05" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="랭킹 3위 10회 달성"
                    android:textColor="@color/text2"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar05"
                    app:layout_constraintStart_toStartOf="@+id/progressBar05"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar05" />

                <!--    6번째 메달 5-->

                <ProgressBar
                    android:id="@+id/progressBar06"
                    style="@style/CircularDeterminateProgressBar"
                    tools:progress="20"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/progressBar05"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar04"
                    app:layout_constraintVertical_bias="0.1" />

                <ImageView
                    android:id="@+id/badge06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_badge05"
                    app:layout_constraintBottom_toBottomOf="@+id/progressBar06"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar06"
                    app:layout_constraintStart_toStartOf="@+id/progressBar06"
                    app:layout_constraintTop_toTopOf="@+id/progressBar06" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="랭킹 1위 10회 달성"
                    android:textColor="@color/text2"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar06"
                    app:layout_constraintStart_toStartOf="@+id/progressBar06"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar06" />

                <!--    7번째 뱃지 3-->

                <ProgressBar
                    android:id="@+id/progressBar07"
                    style="@style/CircularDeterminateProgressBar"
                    tools:progress="10"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar05"
                    app:layout_constraintVertical_bias="0.2" />

                <ImageView
                    android:id="@+id/badge07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_badge03"
                    app:layout_constraintBottom_toBottomOf="@+id/progressBar07"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar07"
                    app:layout_constraintStart_toStartOf="@+id/progressBar07"
                    app:layout_constraintTop_toTopOf="@+id/progressBar07" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="첫 랭킹 1위"
                    android:textColor="@color/text2"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar07"
                    app:layout_constraintStart_toStartOf="@+id/progressBar07"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar07" />

                <!--    8번째 뱃지 11-->

                <ProgressBar
                    android:id="@+id/progressBar08"
                    style="@style/CircularDeterminateProgressBar"
                    tools:progress="0"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/progressBar07"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar06"
                    app:layout_constraintVertical_bias="0.2" />

                <ImageView
                    android:id="@+id/badge08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_badge11"
                    app:layout_constraintBottom_toBottomOf="@+id/progressBar08"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar08"
                    app:layout_constraintStart_toStartOf="@+id/progressBar08"
                    app:layout_constraintTop_toTopOf="@+id/progressBar08" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연속 5일 줍깅하기"
                    android:textColor="@color/text2"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar08"
                    app:layout_constraintStart_toStartOf="@+id/progressBar08"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar08" />

                <!--    9번째 뱃지 10-->

                <ProgressBar
                    android:id="@+id/progressBar09"
                    style="@style/CircularDeterminateProgressBar"
                    tools:progress="100"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8"
                    app:layout_constraintVertical_bias="0.1" />

                <ImageView
                    android:id="@+id/badge09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_badge10"
                    app:layout_constraintBottom_toBottomOf="@+id/progressBar09"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar09"
                    app:layout_constraintStart_toStartOf="@+id/progressBar09"
                    app:layout_constraintTop_toTopOf="@+id/progressBar09" />

                <TextView
                    android:id="@+id/textView09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="첫 어스 저금통 참여하기"
                    android:textColor="@color/text2"
                    app:layout_constraintEnd_toEndOf="@+id/progressBar09"
                    app:layout_constraintStart_toStartOf="@+id/progressBar09"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar09" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>